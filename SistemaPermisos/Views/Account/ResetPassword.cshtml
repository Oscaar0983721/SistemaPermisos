@model SistemaPermisos.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-center">
                <img src="~/images/logo.png" alt="CTPMN Logo" style="height: 60px; margin-bottom: 10px;" />
                <h2>@ViewData["Title"]</h2>
                <p class="text-muted">Ingrese su nueva contraseña</p>
            </div>
            <div class="card-body">
                <form asp-action="ResetPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Token" />
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Password" class="form-control" placeholder="Mínimo 6 caracteres" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Repita su contraseña" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3 text-center">
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-save"></i> Restablecer Contraseña
                        </button>
                    </div>
                </form>
                <div class="text-center mt-3">
                    <a asp-action="Login" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver al Inicio de Sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
