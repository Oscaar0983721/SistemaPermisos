@model SistemaPermisos.ViewModels.DocenteDashboardViewModel

@{
    ViewData["Title"] = "Mi Panel";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4 text-gray-800">Mi Panel</h1>
        </div>
    </div>

    <!-- Tarjetas de estadísticas -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Mis Permisos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.MisPermisos</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pendientes
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PermisosPendientes</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Aprobados
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PermisosAprobados</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Mis Omisiones
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.MisOmisiones</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones rápidas -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Acciones Rápidas</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Create", "Permisos")" class="btn btn-primary btn-block">
                                <i class="fas fa-plus"></i> Solicitar Permiso
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("MisPermisos", "Docente")" class="btn btn-info btn-block">
                                <i class="fas fa-list"></i> Mis Permisos
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Create", "Omisiones")" class="btn btn-warning btn-block">
                                <i class="fas fa-exclamation-triangle"></i> Reportar Omisión
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("MisOmisiones", "Docente")" class="btn btn-secondary btn-block">
                                <i class="fas fa-list"></i> Mis Omisiones
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
