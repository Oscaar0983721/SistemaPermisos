@model IEnumerable<SistemaPermisos.Models.Permiso>

@{
    ViewData["Title"] = "Mis Permisos";
    var esAdmin = Context.Session.GetString("UsuarioRol") == "Admin";
}

<div class="container">
    <h1>@(esAdmin ? "Todos los Permisos" : "Mis Permisos")</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Solicitar Nuevo Permiso</a>
    </p>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            @if (esAdmin)
                            {
                                <th>Docente</th>
                            }
                            <th>Fecha Solicitud</th>
                            <th>Fecha Salida</th>
                            <th>Fecha Regreso</th>
                            <th>Motivo</th>
                            <th>Estado</th>
                            <th>Justificado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (esAdmin)
                                {
                                    <td>@item.Usuario.Nombre</td>
                                }
                                <td>@item.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.FechaSalida.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.FechaRegreso.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.Motivo</td>
                                <td>
                                    <span class="badge @(item.Estado == "Aprobado" ? "bg-success" : (item.Estado == "Rechazado" ? "bg-danger" : "bg-warning"))">
                                        @item.Estado
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(item.Justificado ? "bg-success" : "bg-secondary")">
                                        @(item.Justificado ? "Sí" : "No")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>

                                        @if (!item.Justificado && item.Estado == "Aprobado" && !esAdmin)
                                        {
                                            <a asp-action="Justify" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Justificar</a>
                                        }

                                        @if (esAdmin && item.Estado == "Pendiente")
                                        {
                                            <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-sm btn-success">Aprobar</a>
                                            <a asp-action="Reject" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Rechazar</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

