@model SistemaPermisos.ViewModels.JustificarPermisoViewModel

@{
    ViewData["Title"] = "Justificar Permiso";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Justify" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PermisoId" />

                        <div class="form-group mb-3">
                            <label asp-for="Justificacion" class="control-label"></label>
                            <input asp-for="Justificacion" class="form-control" type="file" accept="image/*" />
                            <small class="form-text text-muted">Adjunte una imagen como justificación (constancia de atención, etc.)</small>
                            <span asp-validation-for="Justificacion" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-primary">Enviar Justificación</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

