@model SistemaPermisos.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4><i class="fas fa-user-circle"></i> Información de Perfil</h4>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.FotoPerfilActual))
                    {
                        <img src="@Model.FotoPerfilActual" alt="Foto de Perfil" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 150px; height: 150px;">
                            <i class="fas fa-user fa-5x text-white"></i>
                        </div>
                    }
                    <h3>@Model.Nombre</h3>
                    <p class="text-muted">@Model.Rol</p>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Editar Perfil
                        </a>
                        <a asp-action="ChangePassword" class="btn btn-secondary">
                            <i class="fas fa-key"></i> Cambiar Contraseña
                        </a>
                        <a asp-action="Activity" class="btn btn-info">
                            <i class="fas fa-chart-line"></i> Mi Actividad
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-id-card"></i> Detalles de la Cuenta</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-4"><i class="fas fa-envelope"></i> Correo Electrónico:</dt>
                        <dd class="col-sm-8">@Model.Correo</dd>

                        <dt class="col-sm-4"><i class="fas fa-phone"></i> Teléfono:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Telefono) ? "No especificado" : Model.Telefono)</dd>

                        <dt class="col-sm-4"><i class="fas fa-building"></i> Departamento:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Departamento) ? "No especificado" : Model.Departamento)</dd>

                        <dt class="col-sm-4"><i class="fas fa-birthday-cake"></i> Fecha de Nacimiento:</dt>
                        <dd class="col-sm-8">@(Model.FechaNacimiento.HasValue ? Model.FechaNacimiento.Value.ToString("dd/MM/yyyy") : "No especificada")</dd>

                        <dt class="col-sm-4"><i class="fas fa-map-marker-alt"></i> Dirección:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Direccion) ? "No especificada" : Model.Direccion)</dd>

                        <dt class="col-sm-4"><i class="fas fa-calendar-alt"></i> Fecha de Registro:</dt>
                        <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

